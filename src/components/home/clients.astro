---
import clients from "../../collections/clients.json";
import Button from "../button.astro";
import Client from "../clients.astro";
---

<section class="max-w-4xl mx-auto px-7 lg:px-0">
  <h2
    class="text-2xl font-bold leading-10 tracking-tight text-neutral-900 dark:text-neutral-100"
  >
    My Clients
  </h2>
  <p class="mb-6 text-base text-neutral-600 dark:text-neutral-400">
    Here are some of the clients I've worked with in the past.
  </p>
  <div
    class="grid items-stretch w-full grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-7 mt-7"
  >
    {
      clients.map((client) => {
        return (
          <Client
            name={client.name}
            description={client.description}
            image={client.image}
            url={client.url}
          />
        )
      })
    }
  </div>

  <div class="flex items-center justify-center w-full py-5">
    <Button text="View All My Clients" link="/clients" />
  </div>
</section>
